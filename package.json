{
	"type": "module",
	"module": "src/index.ts",
	"scripts": {
		"dev": "bun --watch .",
		"build": "cd src && bun run build && cd ..",
		"start": "bun run src/dist/index.js",
		"format": "biome check --write",
		"lint": "biome lint --write --unsafe",
		"type-check": "biome lint && tsc",
		"release": "cd src && npx standard-version && git push --follow-tags origin main  && npm publish"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@clack/prompts": "^0.10.1",
		"@types/bun": "^1.2.8"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
