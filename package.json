{
  "name": "btml",
  "version": "1.0.0",
  "module": "src/index.ts",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "bun .",
    "build": "rm -rf dist && bun build --target=bun --minify --sourcemap=none --outdir=dist ./src/index.ts",
    "start": "bun run dist/index.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode --bytecode dist/index.js --outfile dist/myapp",
    "test": "bun test",
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "check": "biome check ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
