{
  "name": "create-mcprofile",
  "version": "0.0.4",
  "type": "module",
  "license": "MIT",
  "author": "holmityd",
  "bin": "./index.js",
  "files": [
    "index.js",
    "dist"
  ],
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun --watch .",
    "build": "rm -rf dist && bun build --target=node --minify --sourcemap=none --outdir=dist ./src/index.ts",
    "start": "bun run dist/index.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode . --outfile dist/myapp",
    "test": "bun test",
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "check": "biome check ./src",
    "prepublishOnly": "bun run build",
    "publish": "npx standard-version && git push --follow-tags origin main && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holmityd/create-mcprofile.git"
  },
  "bugs": {
    "url": "https://github.com/holmityd/create-mcprofile/issues"
  },
  "homepage": "https://github.com/holmityd/create-mcprofile#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "^1.2.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "adm-zip": "^0.5.16"
  }
}
